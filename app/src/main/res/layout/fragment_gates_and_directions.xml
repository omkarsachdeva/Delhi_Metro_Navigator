<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3F1"
    android:gravity="center"
    tools:context=".GatesAndDirectionsFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbargad"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#002D62"
        android:minHeight="?attr/actionBarSize"
        android:text="Gates and Directions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Gates and Directions"
            android:textColor="@color/white"
            android:textSize="30sp" />



    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbargad"
        app:layout_constraintVertical_bias="0.014">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:text="AIIMS"
            android:textAlignment="textStart"
            android:textColor="#100505"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:src="@drawable/baseline_search_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:backgroundTint="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Gate Number :        1"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Towards :             AIIMS Hospital"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:backgroundTint="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Gate Number :        2"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Towards :             Ansari Nagar"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:backgroundTint="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Gate Number :        3"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Towards :         Safdarjung Hospital"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:backgroundTint="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Gate Number :        4"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Towards :  Vardhman Mahavir Medical College"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#DC271515"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>